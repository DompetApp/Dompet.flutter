{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "packageRules": [
    {
      "managers": [
        "gradle"
      ],
      "matchPackageNames": [
        "com.android.application"
      ],
      "groupName": null
    }
  ],
  "schedule": [
    "at 10:00 am on friday"
  ],
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "rangeStrategy": "bump"
}